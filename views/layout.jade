doctype html

mixin tab(to)
	li&attributes(attributes)
		a(href="##{to}", aria-controls="#{o}", role="tab", data-toggle="tab")
			block


mixin chimneyThumbnail(chimney)
	.thumbnail.chimney-thumbnail&attributes(attributes)
		.img-container
			img.center-block.img-responsive(src=chimney.imageUrl())
		.caption
			h4=chimney.name
			block

mixin chimneyForm(tab)
	form(role="form", method="post", action="chimney", enctype="multipart/form-data")
		.form-group
			label.control-label(for="name") Name
			input.form-control(type="text", name="name")
		.form-group
			label.control-label(for="address") Address
			input.form-control(type="text", name="address")
		.form-group
			label.control-label(for="image") Picture
			input(type="file", name="image", accept="image/*")
		input.swap-input(type='hidden', name="swap" value="0")
		input(type='hidden', name="tab" value="#{tab}")
		input.btn.btn-primary(type="submit", value="Submit")

html
	head
		title Chimney Swap
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/#{theme}/bootstrap.min.css")
		link(rel="stylesheet", href="chimney-swap.css")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	body
		block content
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
